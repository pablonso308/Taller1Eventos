<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Campo de texto para ingresar el nombre del usuario -->
    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre" />

    <!-- Botón para guardar el nombre ingresado -->
    <Button
        android:id="@+id/buttonGuardarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Nombre"
        android:layout_marginTop="16dp" />

    <!-- TextView para mostrar el nombre ingresado -->
    <TextView
        android:id="@+id/textViewNombreGuardado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Botón para iniciar la tarea en segundo plano -->
    <Button
        android:id="@+id/buttonIniciarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar tarea de red"
        android:layout_marginTop="16dp" />

    <!-- TextView para mostrar el progreso de la tarea -->
    <TextView
        android:id="@+id/textViewProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progreso: 0%"
        android:layout_marginTop="16dp" />

    <!-- Botón para volver al MainActivity -->
    <Button
        android:id="@+id/buttonVolverMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al MainActivity"
        android:layout_marginTop="16dp" />

</LinearLayout>
