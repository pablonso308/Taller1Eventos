<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutConfiguracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título de la pantalla de configuración -->
    <TextView
        android:id="@+id/textViewTituloConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el color del fondo"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para cambiar a fondo rojo -->
    <Button
        android:id="@+id/buttonColorRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rojo"
        app:layout_constraintTop_toBottomOf="@id/textViewTituloConfiguracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para cambiar a fondo azul -->
    <Button
        android:id="@+id/buttonColorAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azul"
        app:layout_constraintTop_toBottomOf="@id/buttonColorRojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para cambiar a fondo verde -->
    <Button
        android:id="@+id/buttonColorVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verde"
        app:layout_constraintTop_toBottomOf="@id/buttonColorAzul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para volver a la pantalla de inicio -->
    <Button
        android:id="@+id/buttonVolverInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a la pantalla de inicio"
        app:layout_constraintTop_toBottomOf="@id/buttonColorVerde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
